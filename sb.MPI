#!/bin/bash -1
#SBATCH --mem=120G
#SBATCH --time=24:00:00
#SBATCH --job-name=MPI
#SBATCH --nodes=1
#SBATCH --ntasks-per-node=4
 
 module purge
 module load OpenMPI
 
 echo "Running OPENMPI on $HOSTNAME"
 
 export OMP_NUM_THREADS=1
 time mpirun -np 2 MPI #-x OMP_NUM_THREADS=1 gmx_mpi mdrun -nsteps 500000 -ntomp 1 -v -deffnm 1ns -c 1ns.pdb -nice 0
 
 echo "Finished run on $SLURM_NTASKS $HOSTNAME cores"

